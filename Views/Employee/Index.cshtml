@model List<ASPNETMVCCURUD.Models.Domain.Employee>
@{

}
<h1>Employees</h1>
<table class="table">
    <thead>
    <tr>
        <td>ID</td>
        <td>Name</td>
        <td>Email</td>
        <td>Salary</td>
        <td>Date of Birth</td>
        <td>Department</td>
        <td></td>
        <td></td>
    </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var employee in Model)
            {
                if (employee != null)
                {
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Name</td>
                        <td>@employee.Email</td>
                        <td>@employee.Salary</td>
                        <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                        <td>@employee.Department</td>
                        <td><a href="Employee/View/@employee.Id">View</a></td>
                        <td><a href="Employee/Delete/@employee.Id">Delete</a></td>
                    </tr>
                }
            }
        }
        else
        {
            <tr>
                <td colspan="7">No employees found</td>
            </tr>
        }

    </tbody>
</table>